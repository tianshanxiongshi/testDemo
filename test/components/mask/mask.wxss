/* pages/test/test.wxss */
.modal{
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  width: 100%;
  height: 100%; 
  z-index: 10000;
}
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100%;
  width: 100%;
  background: rgba(0,0,0,0.5);
  z-index:197;
}
.modal-dialog {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  height: 240rpx;
  width: 440rpx;
  border-radius: 16rpx;
  background: #ffffff;
  margin:auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  z-index: 98;
}
.modal-tips {
  height: 140rpx;
  line-height: 140rpx;
  text-align: center;
  color: #333333;
  font-size: 32rpx;
}
.modal-btn {
  height: 99rpx;
  border-top: 1rpx solid #cccccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.modal-btn text {
  flex:1;
  height: 99rpx;
  line-height: 99rpx;
  text-align: center;
  font-size: 32rpx;
}
.cancle {
  border-right: 1rpx solid #cccccc;
  color: #000000;
}
.confirm {
  color: #4A90E2;
}