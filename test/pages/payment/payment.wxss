/* pages/payment/payment.wxss */
page {
  background: #f4f5fa;
}
.box {
  width: 690rpx;
	background-color: #ffffff;
	border-radius: 6rpx;
  margin: auto;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 66rpx 32rpx;
  
}
.shop-name {
  font-size: 26rpx;
	letter-spacing: 2rpx;
	color: #000000;
  margin-bottom: 62rpx;
  
}
.content {
  border-top: 1px solid #dfdfdf;
  border-bottom: 1px solid #dfdfdf;
  padding-top: 47rpx;
}
.sum-text {
  font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 2rpx;
	color: #666666;
  margin-bottom: 20rpx;
}
.money {
  position: relative;
}
.money input {
  height: 100rpx;
  font-size: 60rpx;
  padding-left: 60rpx;
  box-sizing: border-box;
}
.sign {
  font-size: 60rpx;
  line-height: 100rpx;
	letter-spacing: 4rpx;
	color: #333333;
  position: absolute;
  left: 0;
}
button {
  height: 90rpx;
  line-height: 90rpx;
  border:none!important;
  background-color: #fa5a4c!important;
  border-radius: 10rpx;
  color: white!important;
  font-size: 30rpx;
	letter-spacing: 4rpx;
  margin-top: 42rpx;
}
.cover {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.4);
  z-index: 99;
}
.pop-pay {
  position: fixed;
  top: 193rpx;
  left: 0;
  right: 0;
  margin: auto;
  width: 508rpx;
	padding-bottom: 30rpx;
	background-color: #ffffff;
	border-radius: 10px;
  z-index: 100;
}
.head {
  position: relative;
  border-bottom: 1px solid #c8c8c8;
}
.head-text {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
	letter-spacing: 1rpx;
	color: #333333;
  font-weight: 600;
  text-align: center;
}
.close,.forget {
  font-size: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  position: absolute;
  top: 0;
}
.close {
  width: 80rpx;
  left: 0;
}
.forget {
  right: 0;
  padding: 0 30rpx;
  font-size: 26rpx;
  color: #fa5a4c;
}
.middle-name {
  font-size: 30rpx;
	letter-spacing: 1rpx;
	color: #666666;
  text-align: center;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}
.middle-money {
  text-align: center;
  margin-bottom: 15rpx;
}
.middle-money text:first-child {
  font-size: 48rpx;
	letter-spacing: 2rpx;
	color: #333333;
  font-weight: 600;
}
.middle-money text:last-child {
  font-size: 72rpx;
	letter-spacing: 3rpx;
	color: #333333;
  font-weight: 600;
}
.inputs {
  border: 1px solid #c8c8c8;
  display: flex;
  width: 456rpx;
  height: 78rpx;
  margin: auto;
  justify-content: flex-start;
  box-sizing: border-box;
}
.inputs input,.inputs .input_box {
  height: 76rpx;
  line-height: 76rpx;
  width: 74rpx;
  text-align: center;
  border-right: 1px solid #c8c8c8;
}
.inputs input:last-child,.inputs .input_box:last-child {
  border-right: 0;
}

.pop-pay button {
  width: 456rpx;
}
.pwd-content {
  position: relative;
  width: 456rpx;
  margin: auto;
  overflow: hidden;
}
.M-input {
  color: transparent;
  position: absolute;
  top: 0;
  left: -200rpx;
  right: 0;
  margin: auto;
  height: 78rpx;
  width: 650rpx;
}
.baseColor {
  color:#fa5a4c!important;
}
.warnImg {
  height: 22rpx;
  width: 22rpx;
}
.item {
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #e8e8e8;
}
.item view {
  font-size: 24rpx;
	letter-spacing: 3rpx;
	color: #333333;
}
.item .lastMoney {
  font-size: 40rpx;
  color: #fa5a4c;
}

.select-box {
  height: 35rpx;
  width: 35rpx;
  /* border-radius: 50%;
  border:1px solid #666666; */
}
.select-box image {
  height: 100%;
  width: 100%;
}
.integral-input {
  display: inline-block;
  vertical-align: middle;
  width: 97rpx;
	height: 32rpx;
  min-height: 32rpx;
	border-radius: 6rpx;
	border: solid 1px #666666;
  text-align: center;
}
.integral-deduction view {
  font-size: 18rpx;
	color: #666666;
  line-height: 36rpx;
}

.modal-view {
  position: absolute;
  top: 120rpx;
  left: 0;
  right: 0;
  width: 690rpx;
  margin: auto;
  background: #fff;
  border-radius: 20rpx;
  z-index: 1000;
}
.modal-title {
  text-align: center;
  height: 104rpx;
  line-height: 104rpx;
  font-size: 30rpx;
  letter-spacing: 4rpx;
  color: #fff;
  font-weight: 600;
  background: #fa5a4c;
  border-radius: 20rpx 20rpx 0 0;
}
.modal-content {
  padding: 33rpx 30rpx 10rpx 31rpx;
}
.modal-item {
  margin-bottom: 32rpx;
}
.modal-item view {
  font-size: 24rpx;
  letter-spacing: 3rpx;
  font-weight: 600;
  color: #666;
  margin-bottom: 5rpx;
}

.errMsg {
  text-align: center;
  font-size: 26rpx;
  color: #fa5a4c;
  margin-top: 30rpx;
}

.Integral-input {
  border:1px solid #dcdcdc;
  height:68rpx;
  line-height:68rpx;
  margin-top:40rpx;
  text-align: center;
}
.holder-style {
  font-size: 28rpx;
  text-align: center;
}
.integral-tips {
  color: #323232;
  font-size: 26rpx;
  margin-top: 20rpx;
  text-align: center;
}
.arrow-right {
  width: 25rpx;
  height: 14rpx;
  transform: rotate(-90deg);
  vertical-align: middle;
  margin-top: -2rpx;
}