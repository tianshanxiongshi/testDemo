/* pages/choose-store/choose-store.wxss */
.baseColor {
  color: #fa5a4c!important;
}
.nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 30rpx;
  border-bottom: 1px solid #e8e8e8;
}
.nav-item {
  display: flex;
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 3rpx;
	color: #333333;
}
.nav-flag {
  display:flex;
  flex-wrap:wrap;
  justify-content: space-evenly;
  width:10rpx;
  align-items:center;
}
.nav-flag image {
  width: 9rpx;
  height: 8rpx;
}
.site {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1px solid #e8e8e8;
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 3rpx;
	color: #333333;
}
.location {
  width: 21rpx;
  height: 29rpx;
  vertical-align: text-bottom;
  margin-right: 6rpx;
}
.refresh {
  width: 24rpx;
  height: 24rpx;
}
.telephone {
  width: 16rpx;
  height: 16rpx;
  margin-right: 10rpx;
}
.storeInfo {
  padding: 30rpx;
  display: flex;
}
.storeInfo .storeImg {
  width: 138rpx;
  height: 138rpx;
  margin-right: 22rpx;
  background: #f3f5fa;
}
.storeInfo .store-item {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
}
.store-name {
  display: flex;
  justify-content: space-between;
  width: 100%;
  font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 3rpx;
	color: #333333;
}
.store-site,.store-tel {
  font-size: 16rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 3rpx;
	color: #666666;
}
.store-site text {
  margin-right: 20rpx;
}
.cut-off-line {
  height: 16rpx;
  width: 100%;
  background: #f3f5fa;
}

