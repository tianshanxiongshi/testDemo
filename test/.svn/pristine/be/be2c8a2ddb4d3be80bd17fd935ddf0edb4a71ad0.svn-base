/* pages/my-order/my-order.wxss */
page {
  height: 100%;
}
.page {
  background: #f3f5fa;
  min-height: 100%;
  padding-bottom: 50rpx;
}
.base-color {
  color: #fa5a4c!important;
}
.finished-color {
  color: #58c62f!important;
}
.nav {
  width: 100%;
  display: flex;
  justify-content: space-evenly;
  border-bottom: 1px solid #e8e8e8;
  border-top: 1px solid #dadada;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #f3f5fa;
}
.nav view {
  height: 90rpx;
  line-height: 90rpx;
  width: 110rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  font-weight: 600;
  color: #666;
  letter-spacing: 4rpx;
}
.nav .checked {
  color: #fa5a4c;
  border-bottom: 3rpx solid #fa5a4c;
}

.content {
  padding: 92rpx 0 0;
}
.order-item {
  background: #fff;
  margin-bottom: 16rpx;
}
.item-top {
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1px solid #e8e8e8;
  display: flex;
  justify-content: space-between;
  padding: 0 29rpx;
}
.item-top text {
  font-size: 22rpx;
  color: #666;
  font-weight: 600;
}
.item-info {
  padding: 12rpx 30rpx;
  border-bottom: 1px solid #e8e8e8;
  display: flex;
  justify-content: space-between;
}
.goodsImg {
  height: 170rpx;
  width: 170rpx;
  background: pink;
}
.goodsImg image {
  width: 100%;
  height: 100%;
}
.goodsInfo {
  flex: 1;
  display: flex;
  justify-content: space-around;
  flex-direction:column;
  padding-left: 26rpx;
}
.goodsInfo .name {
  font-size: 24rpx;
	letter-spacing: 3rpx;
	color: #333333;
  font-weight: 600;
}
.goodsInfo .activity view {
  display: inline-block;
  padding: 7rpx 14rpx;
  color: #c78c00;
  font-size: 18rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
  border:1px solid #c78c00;
  border-radius: 6rpx;
  margin-right: 12rpx;
}
.goodsInfo .activity view.seckill {
  color: #fa695d;
  border-color:#fa695d;
}
.goodsInfo .attr {
  display: flex;
  justify-content: space-between;
}
.goodsInfo .attr .num {
  color: #999;
  font-size: 20rpx;
  font-weight: 600;
  letter-spacing: 3rpx;
}
.goodsInfo .attr .price {
  color: #fa5a4c;
  font-size: 24rpx;
  font-weight: 600;
  letter-spacing: 3rpx;
}
.item-other {
  color: #333;
  font-size: 22rpx;
  font-weight: 600;
  letter-spacing: 3rpx;
  padding: 30rpx 30rpx 21rpx;
  border-bottom: 1px solid #e8e8e8;
}
.location-img {
  height: 20rpx;
  width: 16rpx;
  margin-right: 6rpx;
}
.order-time {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order-time .cancleOrder {
  padding: 15rpx 20rpx;
  color: #fa5a4c;
  border-radius: 6rpx;
	border: solid 1px #fa5a4c;
  font-size: 22rpx;
  font-weight: 600;
}



.modal-dialog {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  height: 268rpx;
  width: 500rpx;
  border-radius: 16rpx;
  background: #ffffff;
  margin:auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  z-index: 198;
}
.modal-tips {
  height: 168rpx;
  line-height: 168rpx;
  text-align: center;
  color: #000;
  font-size: 36rpx;
  font-weight: 600;
}
.modal-btn {
  height: 99rpx;
  border-top: 1rpx solid #e6e6e6;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.modal-btn text {
  flex:1;
  height: 99rpx;
  line-height: 99rpx;
  text-align: center;
  font-size: 32rpx;
}
.cancle {
  border-right: 1rpx solid #e6e6e6;
  color: #000000;
}
.confirm {
  color: #0072ff;
}
.no-more {
  font-weight:600;
  font-size:22rpx;
  color:#666;
  text-align:center;
  margin-top: 20rpx;
}