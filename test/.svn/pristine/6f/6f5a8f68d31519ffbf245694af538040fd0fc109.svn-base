/* components/statistics/statistics.wxss */
.middle {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 44rpx 0 49rpx 0;
}
.middle .line {
  height: 1px;
  width: 238rpx;
  background: #595959;
}
.middle .text {
  color: #333;
  font-size: 28rpx;
  font-weight: 600;
}
.count {
  display: flex;
  justify-content: space-around;
  text-align: center;
}
.count-item {
  position: relative;
}
.count-item view:first-child {
  height: 139rpx;
  line-height: 139rpx;
  width: 139rpx;
  border-radius: 50%;
  background: #f3f5fa;
  font-size: 36rpx;
  color: #333;
}
.count-item view:last-child {
  position: absolute;
  height: 44rpx;
  line-height: 44rpx;
  width: 130rpx;
  border-radius: 22rpx;
  background: #fa5a4c;
  bottom: -18rpx;
  left: 2rpx;
  font-size: 24rpx;
  color: #fff;
  font-weight: 600;
}
.list {
  padding: 102rpx 0 0;
}
.list-item {
  margin-bottom: 56rpx;
}
.item-info {
  display: flex;
  justify-content: space-around;
  font-size: 24rpx;
  color: #333;
  font-weight: 600;
  padding: 0 15rpx;
}
.item-time {
  font-size: 16rpx;
  color: #999;
  font-weight: 600;
}
.baseColr {
  color: #fa5a4c!important;
}