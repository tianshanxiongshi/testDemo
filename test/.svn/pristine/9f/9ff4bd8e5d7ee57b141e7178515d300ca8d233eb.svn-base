/* pages/personal-info/personal-info.wxss */

.my-erm {
  position: relative;
  text-align: center;
  padding-bottom: 47rpx;
  padding-top: 30rpx;
  color: #333;
  font-size: 35rpx;
  font-weight: 600;
  background: #f3f5fa;
  border-bottom: 1px solid #e8e8e8;
}
.my-erm image {
  height: 450rpx;
  width: 450rpx;
}
.barcode {
  width: 450rpx;
  height: 450rpx;
  margin: auto;
}
.func {
  position: absolute;
  top: 39rpx;
  right: 38rpx;
  width: 106rpx;
  display: flex;
  justify-content: space-between;
}
.setting {
  width: 33rpx;
  height: 33rpx;
}
.share {
  width: 32rpx;
  height: 30rpx;
}
.share image,.setting image {
  width: 100%;
  height: 100%;
}

.middle {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 44rpx 0 49rpx 0;
}
.middle .line {
  height: 1px;
  width: 238rpx;
  background: #595959;
}
.middle .text {
  color: #333;
  font-size: 28rpx;
  font-weight: 600;
}
.count {
  display: flex;
  justify-content: space-around;
  text-align: center;
}
.count-item {
  position: relative;
}
.count-item view:first-child {
  height: 139rpx;
  line-height: 139rpx;
  width: 139rpx;
  border-radius: 50%;
  background: #f3f5fa;
  font-size: 36rpx;
  color: #333;
}
.count-item view:last-child {
  position: absolute;
  height: 44rpx;
  line-height: 44rpx;
  width: 130rpx;
  border-radius: 22rpx;
  background: #fa5a4c;
  bottom: -18rpx;
  left: 2rpx;
  font-size: 24rpx;
  color: #fff;
  font-weight: 600;
}
.list {
  padding: 102rpx 112rpx 0;
}
.list-item {
  margin-bottom: 56rpx;
}
.item-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #333;
  font-weight: 600;
}
.item-time {
  font-size: 16rpx;
  color: #999;
  font-weight: 600;
}
.baseColr {
  color: #fa5a4c!important;
}

.bottom {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  padding-bottom: 44rpx;
}
.bottom::after,.bottom::before {
  content: '';
  display: inline-flex;
  width: 120rpx;
  height: 1rpx;
  background: #dcdcdc;
  vertical-align: middle;
  margin: 0 20rpx;
  margin-top: -6rpx;
}