/* pages/evaluate-list/evaluate-list.wxss */
@import "../../iconfont/iconfont.wxss";
.evaluate_list{
  width: 750rpx;
  height: auto;
}
.tab{
  width: 750rpx;
  height: 84rpx;
  display: flex;
  border-bottom: 1rpx solid #E8E8E8;
  border-top: 1rpx solid #E8E8E8;
  justify-content:space-around;
}
  .tab text{
    display:block;
    position: relative;
  text-align: center;
  /* flex-grow: 1; */
  color: #666666;
  font-size: 24rpx;
}
 .tab text .line{ 
   width: 100%;
   position: absolute;
   bottom: 0;
   left: 0;
   height: 4rpx;
   background-color: #FA5A4C;
 }
.tab .setColor{
  color: #FA5A4C;
}
.evaluate_detail{
  width:750rpx;
  height: auto;
  border-bottom: 1rpx solid #E8E8E8;
  overflow: hidden;
  padding-bottom: 20rpx;
}
.evaluate_img{
   width: 690rpx;
   height: auto;
   margin: 0 auto;
   margin-top: 36rpx;  
}
.evaluate_img .evaluate_left{
  float: left;
  width: 70rpx;
  height: 70rpx;
}
.evaluate_img .evaluate_left image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.evaluate_img .evaluate_right{
  width: 610rpx;
  float: right;
  
}
.evaluate_img .evaluate_right .star{
  float: left;
  width: 100%;
line-height: 28rpx;
 font-size: 24rpx;
   height: 40rpx;
}
.evaluate_img .evaluate_right .star text{
  margin-left: 10rpx;
  float: left;
line-height: 40rpx;
 font-size: 24rpx;
   height: 40rpx;
}
.evaluate_img .evaluate_right .star .te_xt{
color: #EF5C51;
}

 
.evaluate_img .evaluate_right .name{
  float: left;
  width: 100%;
  height: 32rpx;
}
.evaluate_img .evaluate_right .name text{
  display: block;
  float: left;
  line-height: 32rpx;
  color: #333333;
  font-size:24rpx;
}

.evaluate_img .evaluate_right .ev_content{
  float: left;
  width: 100%;
  height: auto;
  margin-top: 8rpx;
}
.evaluate_img .evaluate_right .ev_content text{
  float: left;
  width: 100%;
  height: auto;
  line-height: 48rpx;
  font-size: 24rpx;
  color: #333333;
  overflow: hidden;
}

.evaluate_img .evaluate_right .ev_content .te_1{
   height: 140rpx;
   display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.evaluate_img .evaluate_right .i_mg{
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap:wrap;
}
.evaluate_img .evaluate_right .i_mg image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 14rpx;
  margin-right: 14rpx;
   margin-top: 20rpx;
  
}
.evaluate_img .evaluate_right .addres{
  width: 100%;
  height: 60rpx;
}
.evaluate_img .evaluate_right .addres text{
  line-height: 60rpx;
  font-size:18rpx;
  color: #999999;
}
.evaluate_img .evaluate_right .addres .text_1{
  float: right;
}